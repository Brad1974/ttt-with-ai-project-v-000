#!/usr/bin/env ruby

require_relative '../config/environment'
require_relative '../lib/game.rb'
require_relative '../lib/players/computer.rb'
require_relative '../lib/players/human.rb'
require_relative '../lib/board.rb'


puts "Welcome to OsTrItCh-TAC-TOE!"
puts "Will this be a 1 or 2 player game?"
input = gets
if input.chomp.strip == "1"
    
    game = Game.new(player_1 = Player::Computer.new("X"), player_2 = Player::Human.new("O"), board = Board.new)
    game.play

elsif input.chomp.strip == "2"
    game = Game.new
    game.play
end
puts "Would you like to play again?"
input = gets.strip

if input == "yes"

  game = Game.new
  game.play

elsif input == "no"
  puts "See you next time!"
else puts "See you next time!"
end

