puts "-----------"
puts " 7 | 8 | 9 "
sleep 1

game = Game.new
game.play

puts "Would you like to play again?"
input = gets.strip

if input == "yes"

  game = Game.new
  game.play

elsif input == "no"
  puts "See you next time!"
else puts "See you next time!"
end

